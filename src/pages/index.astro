---
import Page from '../components/Page.astro';
---

<!doctype html>
<Page noPadding>
	<div class="flex flex-col gap-2 justify-center items-center">
		<h1>
			<span class="sr-only">Pulse</span>
			<video class="h-80 -mb-24" autoplay muted>
				<source src="/media/puls.webm" type="video/webm" />
				Your browser does not support the &lt;video&gt; tag.
			</video>
		</h1>
		<h3 class="text-xl font-semibold flex flex-col items-center gap-2 your-new-chat-platform">
			<span>Your new chat platform</span>
			<button class="bg-slate-700 rounded-lg px-4 py-2 w-min later">Download</button>
		</h3>
	</div>
</Page>
